{
  "name": "color-variants",
  "version": "0.1.0",
  "description": "Generate light and dark variants of a color",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "color"
  ],
  "author": "Cole Bemis <cole@colebemis.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/colebemis/color-variants.git"
  },
  "dependencies": {
    "@types/color": "^3.0.0",
    "color": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  }
}
